{
  "name": "sims4-sim-generator",
  "version": "1.0.0",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "NODE_ENV=development nodemon --exitcrash --no-stdin --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "dev:debug": "NODE_ENV=development nodemon --exitcrash --no-stdin --watch 'src/**/*.ts' --exec 'node --inspect=0.0.0.0:9229 -r ts-node/register' src/index.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prettier": "prettier 'src/**/*.{ts,tsx}' --check",
    "prettier:fix": "prettier 'src/**/*.{ts,tsx}' --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@inquirer/prompts": "^3.0.4",
    "chalk": "^4.1.2",
    "change-case": "^4.1.2",
    "cli-table3": "^0.6.3",
    "remeda": "^1.25.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
